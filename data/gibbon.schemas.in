<gconfschemafile>
  <schemalist>
    <schema>
      <key>/schemas/apps/gibbon/preferences/server/host</key>
      <applyto>/apps/gibbon/preferences/server/host</applyto>
      <owner>gibbon</owner>
      <type>string</type>
      <default>fibs.com</default>
      <locale name="C">
	<short>Server</short>
	<long>The server that you want to connect to, usually fibs.com.</long>
      </locale>
    </schema>
    <schema>
      <key>/schemas/apps/gibbon/preferences/server/port</key>
      <applyto>/apps/gibbon/preferences/server/port</applyto>
      <owner>gibbon</owner>
      <type>int</type>
      <default>4321</default>
      <locale name="C">
	<short>Port</short>
	<long>The port number of the server, normally 4321.</long>
      </locale>
    </schema>
    <schema>
      <key>/schemas/apps/gibbon/preferences/server/login</key>
      <applyto>/apps/gibbon/preferences/server/login</applyto>
      <owner>gibbon</owner>
      <type>string</type>
      <locale name="C">
	<short>Login</short>
	<long>Your username on that server.</long>
      </locale>
    </schema>
    <schema>
      <key>/schemas/apps/gibbon/preferences/server/password</key>
      <applyto>/apps/gibbon/preferences/server/password</applyto>
      <owner>gibbon</owner>
      <type>string</type>
      <locale name="C">
	<short>Password</short>
	<long>Your password on that server.</long>
      </locale>
    </schema>
    <schema>
      <key>/schemas/apps/gibbon/preferences/server/save_pwd</key>
      <applyto>/apps/gibbon/preferences/server/save_pwd</applyto>
      <owner>gibbon</owner>
      <type>bool</type>
      <default>FALSE</default>
      <locale name="C">
	<short>Remember password?</short>
	<long>Should your password be stored on your hard disk?</long>
      </locale>
    </schema>
    <schema>
      <key>/schemas/apps/gibbon/preferences/server/address</key>
      <applyto>/apps/gibbon/preferences/server/address</applyto>
      <owner>gibbon</owner>
      <type>bool</type>
      <default>FALSE</default>
      <locale name="C">
	<short>E-mail address</short>
	<long>E-mail address to display on the server</long>
      </locale>
    </schema>
    <schema>
      <key>/schemas/apps/gibbon/preferences/debugging/timestamps</key>
      <applyto>/apps/gibbon/preferences/debugging/timestamps</applyto>
      <owner>gibbon</owner>
      <type>bool</type>
      <default>FALSE</default>
      <locale name="C">
        <short>Show timestamps</short>
        <long>Prefix all server output with a high-resolution timestamp</long>
      </locale>
    </schema>
    <schema>
      <key>/schemas/apps/gibbon/preferences/debugging/server_communication</key>
      <applyto>/apps/gibbon/preferences/debugging/server_communication</applyto>
      <owner>gibbon</owner>
      <type>bool</type>
      <default>FALSE</default>
      <locale name="C">
        <short>Show server communication</short>
        <long>Show complete server communication in server console</long>
      </locale>
    </schema>
    <schema>
      <key>/schemas/apps/gibbon/data/recent/commands</key>
      <applyto>/apps/gibbon/data/recent/commands</applyto>
      <owner>gibbon</owner>
      <type>list</type>
      <list_type>string</list_type>
      <locale name="C">
        <short>Recent commands</short>
        <long>List of commands that have been sent to the server recently.
        </long>
      </locale>
    </schema>
    <schema>
      <key>/schemas/apps/gibbon/data/recent/max_commands</key>
      <applyto>/apps/gibbon/data/recent/max_commands</applyto>
      <owner>gibbon</owner>
      <type>int</type>
      <default>100</default>
      <locale name="C">
	<short>Maximum saved commands</short>
	<long>Maximum number of commands that should be remembered for
              auto-completion.</long>
      </locale>
    </schema>
  </schemalist>
</gconfschemafile>
